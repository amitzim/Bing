{
 "manifest_version": 2,
 "name": "Bing Searcher",
 "description": "Redirects requests to Bing",
 "version": "1.0.0",
 "author": "Amit Zimbalist",
 "permissions": ["activeTab", "background", "webRequestBlocking", "webRequest", "<all_urls>"],
 "background": {
    "scripts": ["background.js"],
    "persistent": true
  },
"browser_action": {
   "default_title": "Search in Bing",
   "default_popup": "popup.html"
 }
}